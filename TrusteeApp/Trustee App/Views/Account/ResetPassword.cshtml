@model TrusteeApp.Domain.Dtos.UserModel

@{
    ViewData["Title"] = "Reset password";
}


<div class="fw-bold d-md-flex h-md-100 align-items-center justify-content-center mt-md-0">

    <div class="pt-0 pt-md-5 col-md-5 col-lg-4 col-xl-3 bg-white p-5 animate__animated animate__pulse" style="border-radius: 10px">

        <h2 class="py-md-3 py-5 my-5 my-md-0 mb-2">Reset your password</h2>

        <div class="form-wrapper">

            <form method="post" class="" asp-action="ResetPasswordPost">
           
                <div class="form-group">

                    <label class=" mb-2" asp-for="Password">New Password</label>

                    <input class="form-control mb-2 pe-5 trustee-icon-password" type="password" asp-for="Password">

                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">

                    <label class=" mb-2" asp-for="ConfirmPassword"></label>

                    <input class="form-control mb-2 pe-5 trustee-icon-password" type="password" asp-for="ConfirmPassword">

                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <br />

                <div class="form-group mb-4 mt-3">
                    <button type="submit" class="fs-5 btn btn-md w-100 trustee-btn4 rounded" style="background-color: #d43662; color: white;">Reset</button>
                </div>
            </form>

        </div>
    </div>

</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
