@{
    ViewData["Title"] = "Account Activation Confirmation";
}

<div class="fw-bold d-md-flex h-md-100 align-items-center justify-content-center mt-md-0">

    <div class="pt-0 pt-md-5 col-md-5 col-lg-4 col-xl-3 bg-white p-5 animate__animated animate__tada" style="border-radius: 10px">

        <div class="text-center mt-5 mt-md-0 pt-5">
            <h1><i class="bi bi-check-circle-fill" style="color: #d43662;"></i></h1>
        </div>

        <h2 class="py-md-3 my-3 my-md-0 mb-2 text-center" style="color: #d43662;">Congratulations!</h2>

        <div class="mb-3 text-center">
            @*<h6 class="text-center" style="color: #d43662;">@TempData["StatusMessage"]</h6>*@
            <span class="text-center">Account activation successful.</span>
        </div>

        <form id="formConfirmEmail" method="get" class="" asp-controller="Home" asp-action="Index"></form>
    </div>
</div>


@section Scripts {

    <script>

        document.addEventListener('DOMContentLoaded', () => {

            setTimeout(() => { document.getElementById('formConfirmEmail').submit(); }, 1000);
        })

    </script>
}