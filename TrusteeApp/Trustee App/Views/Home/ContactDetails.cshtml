@model TrusteeApp.Domain.Dtos.UserContactDetails

@{
    ViewData["Title"] = "Contact Details Page";
}

<div class="col-1 position-fixed trustee-back-media" style="">

    <a asp-action="Index" class="bg-transparent trustee-btn w-100 p-2 text-white border-0 d-flex flex-column align-items-center" style="width: 140px;">
        <span class="fs-4 shadow-lg">Go Back</span>
    </a>
</div>

<form method="post" class="">

    <div class="col-1 position-fixed" style="bottom: 5%; right: 5%; width: 140px;">

        <button type="submit" asp-action="SaveContactDetails" asp-controller="Home" class="trustee-btn2 rounded w-100 p-2 text-white border border-white d-flex flex-column align-items-center shadow-lg" style="background-color: #d43662;">
            <span class="text-truncate fs-4">Continue</span>
        </button>
    </div>

    <div class="fw-bold d-md-flex h-md-100 align-items-center mt-md-0 justify-content-center">

        <div class="position-absolute postion-md-relative trustee-media d-flex flex-column align-items-center col-lg-6">

            <div class="bg-white p-5 col-12 shadow-lg animate__animated animate__pulse" style="border-radius: 10px">

                <h2 class="mt-4">Contact Details</h2>

                <div class="col-2 rounded bg-black" style="height: 2.5px;">
                </div>

                <div class="form-wrapper">

                    <input hidden asp-for="PackageId" />

                    <div class="row mb-3">

                        <div class="col form-group">

                            <label class="mb-3 pt-3"></label>

                            <select class="trustee-form-control mb-2" type="text" asp-for="Title">
                                <option>Mr.</option>
                                <option>Mrs.</option>
                                <option>Miss</option>
                            </select>

                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="col form-group">

                            <label class="mb-3" asp-for="FirstName"></label>

                            <input class="trustee-form-control mb-2 " type="text" asp-for="FirstName">

                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>

                        <div class="col form-group">

                            <label class="mb-3" asp-for="LastName"></label>

                            <input class="trustee-form-control mb-2 " type="text" asp-for="LastName">

                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group mb-3 col-12">

                        <label class="mb-3" asp-for="PermanentAddress"></label>

                        <input class="trustee-form-control mb-2" type="text" asp-for="PermanentAddress">

                        <span asp-validation-for="PermanentAddress" class="text-danger"></span>
                    </div>

                    <div class="row mb-5">

                        <div class="col form-group">

                            <label class="mb-3" asp-for="StateOfOrigin"></label>

                            <select class="trustee-form-control mb-2" type="text" asp-for="StateOfOrigin">
                                <option>Lagos</option>
                                <option>Ibandan</option>
                                <option>Ogun</option>
                            </select>

                            <span asp-validation-for="StateOfOrigin" class="text-danger"></span>
                        </div>

                        <div class="col form-group">

                            <label class="mb-3" asp-for="DateOfBirth" max="" min=""></label>

                            <input class="trustee-form-control mb-2 trustee-icon" type="date" asp-for="DateOfBirth">

                            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                        </div>

                    </div>



                </div>
            </div>

            <div class="col-2 mt-5 mx-5 shadow-lg">

                <div class="d-flex align-items-center">

                    <div class="col-7 me-3 bg-white rounded trustee-btn" style="height: 7px;">
                    </div>

                    <div class="col-4 bg-white rounded trustee-btn" style="height: 2.5px;">
                    </div>

                </div>
            </div>

        </div>
    </div>
</form>


@section Scripts {

    <partial name="_ValidationScriptsPartial" />

    @if (Model.DateOfBirth == DateTime.Parse("01/01/0001 00:00:00"))
    {
        <script>document.addEventListener("DOMContentLoaded", resetDateInput);

            function resetDateInput() {

                const $this = $("#DateOfBirth");
                $this.val("");

            }</script>
    }

}