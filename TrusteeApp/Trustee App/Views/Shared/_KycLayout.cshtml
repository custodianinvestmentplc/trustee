<!DOCTYPE html>

<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Trustee Portal - @ViewData["Title"]</title>

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&amp;display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.9.1/font/bootstrap-icons.min.css"
          integrity="sha512-5PV92qsds/16vyYIJo3T/As4m2d8b6oWYfoqV+vtizRB6KhF1F9kYzWzQmsO6T3z3QG2Xdhrx7FQ+5R1LiQdUA=="
          crossorigin="anonymous"
          referrerpolicy="no-referrer" />


    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">


    @*<link rel="stylesheet" href="~/css/table-filter-style.css" />*@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @*<link href="~/css/login.css" asp-append-version="true" rel="stylesheet" />*@

    @*<link rel="stylesheet" href="~/fontawesome/css/all.css" />*@
    @*<link rel="stylesheet" href="~/fontawesome-free-5.15.4-web/css/all.css" />*@
    <link href="~/css/mysite.css" asp-append-version="true" rel="stylesheet" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.css" integrity="sha512-3pIirOrwegjM6erE5gPSwkUzO+3cTjpnV9lexlNZqvupR64iZBnOOTiiLPb9M36zpMScbmUNIcHUqKD47M719g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

</head>


<body style=" background: #8D99AE;">

    @*<vc:preloader />*@

    <partial name="_BusyIndicatorPartial" />


    @*<div class="col-1 position-absolute trustee-back-media" style="">

        <a href="javascript:history.go(-1)" class="bg-transparent trustee-btn w-100 p-2 text-white border-0 d-flex flex-column align-items-center" style="width: 140px;">
            <span class="fs-4 shadow-lg">Go Back</span>
        </a>
    </div>*@

    <div class="" style="min-height: 100vh;">

        <div class="d-none d-lg-block col-3 m-3 position-fixed bg-white shadow-lg" style="min-height: 97vh; border-radius: 20px;">

            <div class="nav nav-pills nav-vertical">

                <div>
                    <nav class="ps-4 pt-md-4">
                        <a class="navbar-brand" asp-controller="Home" asp-action="LandingPage">
                            <h3 class="page-header-title trustee-header2 text-uppercase shadow-lg">
                                Trustee Portal
                            </h3>
                        </a>
                    </nav>
                </div>
            </div>

            <div class="">

                <div class="d-flex m-5 mb-2 px-3 align-items-center">

                    <div class="me-3">

                        @if (ViewBag.CurrentState == 1)
                        {
                            <div class="bg-secondary d-flex flex-column rounded-circle border border-danger align-items-center" style="padding: 10px; width: 60px; height: 60px;">

                                @*<a asp-controller="Home" asp-action="ContactDetails">*@
                                <h2 class="text-white">1</h2>
                                @*</a>*@
                            </div>
                        }
                        else
                        {
                            <div class="d-flex flex-column rounded-circle border border-danger align-items-center" style="padding: 10px; width: 60px; height: 60px;">

                                @*<a asp-controller="Home" asp-action="ContactDetails">*@
                                <h2 class="text-danger">1</h2>
                                @*</a>*@
                            </div>
                        }
                    </div>

                    <div class="">

                        <div class="text-secondary fs-5">
                            STEP 1
                        </div>

                        <div class="text-black">
                            <h2 class="">KYC</h2>
                        </div>
                    </div>
                </div>

                <br>

                <div class="d-flex m-5 mb-2 px-3 align-items-center">

                    <div class="me-3">
                        @if (ViewBag.CurrentState == 2)
                        {
                            <div class="bg-secondary d-flex flex-column rounded-circle border border-danger align-items-center" style="padding: 10px; width: 60px; height: 60px;">

                                @*<a asp-controller="Home" asp-action="SimpleWillMoney">*@
                                <h2 class="text-white">2</h2>
                                @*</a>*@
                            </div>
                        }
                        else
                        {
                            <div class="d-flex flex-column rounded-circle border border-danger align-items-center" style="padding: 10px; width: 60px; height: 60px;">

                                @*<a asp-controller="Home" asp-action="SimpleWillMoney">*@
                                <h2 class="text-danger">2</h2>
                                @*</a>*@
                            </div>
                        }
                    </div>

                    <div class="">

                        <div class="text-secondary fs-5">
                            STEP 2
                        </div>

                        <div class="text-black">
                            <h2 class="">ADD-ONS</h2>
                        </div>
                    </div>
                </div>

                <br>

                <div class="d-flex m-5 mb-2 px-3 align-items-center">

                    <div class="me-3">
                        @if (ViewBag.CurrentState == 3)
                        {
                            <div class="bg-secondary d-flex flex-column rounded-circle border border-danger align-items-center" style="padding: 10px; width: 60px; height: 60px;">

                                @*<a asp-controller="Home" asp-action="Summary">*@
                                <h2 class="text-white">3</h2>
                                @*</a>*@
                            </div>
                        }
                        else
                        {
                            <div class="d-flex flex-column rounded-circle border border-danger align-items-center" style="padding: 10px; width: 60px; height: 60px;">

                                @*<a asp-controller="Home" asp-action="Summary">*@
                                <h2 class="text-danger">3</h2>
                                @*</a>*@
                            </div>
                        }
                    </div>

                    <div class="">

                        <div class="text-secondary fs-5">
                            STEP 3
                        </div>

                        <div class="text-black">
                            <h2 class="">SUMMARY</h2>
                        </div>
                    </div>
                </div>
                <br>

                <div class="p-4 pb-0">
                    <img src="/images/family.jpg" class="card-img" alt="login-logo">
                </div>

            </div>
        </div>

        <div id="content-placeholder" class="container-fluid p-0 align-items-center" style="">

            <div class="d-flex justify-content-end col-12 m-3 pe-5 position-fixed" style="">
                <nav class=" shadow-lg rounded">
                    <div class="d-flex align-content-center">

                        <a asp-controller="" asp-action="" class="me-4 trustee-btn d-flex flex-column align-items-center" data-bs-toggle="tooltip" title="Navigate to Trustees Products" data-bs-placement="bottom">
                            <h6 class="m-0 page-header-title fs-4 text-white">
                                Products
                            </h6>
                            <div class="col-8 bg-white trustee-btn " style="height: 2.5px;">
                            </div>
                        </a>

                        <a asp-controller="" asp-action="" class="me-4 trustee-btn" data-bs-toggle="tooltip" title="Goto Settings" data-bs-placement="bottom">
                            <div>
                                <i class="bi bi-gear fs-5 text-white"></i>
                            </div>
                        </a>

                        <a asp-controller="" asp-action="" class="me-4 trustee-btn" data-bs-toggle="tooltip" title="See your Notifications" data-bs-placement="bottom">
                            <div>
                                <i class="bi bi-bell fs-5 text-white"></i>
                            </div>
                        </a>

                        <a asp-controller="Account" asp-action="Logout" class="me-4 trustee-btn" data-bs-toggle="tooltip" title="Logout" data-bs-placement="bottom">
                            <div>
                                <i class="bi bi-box-arrow-right fs-5 text-white"></i>
                            </div>
                        </a>

                        <a asp-controller="" asp-action="" class="me-4 trustee-btn" data-bs-toggle="tooltip" title="Goto Profile" data-bs-placement="bottom">
                            <div>
                                <i class="bi bi-person-circle fs-5 text-white"></i>
                            </div>
                        </a>
                    </div>
                </nav>
            </div>

            <nav class="d-lg-none d-block ps-3 ms-md-5 ps-md-3 pt-3 position-absolute">
                <a class="navbar-brand" asp-controller="Home" asp-action="LandingPage">
                    <h3 class="page-header-title trustee-header2 text-uppercase">
                        Trustee Portal
                    </h3>
                </a>
            </nav>

            <partial name="_Notifications" />
            <div class="col-lg-9 kyc-render offset-lg-3" style="min-height: 100vh;">
                @RenderBody()
            </div>
        </div>
    </div>
    @*</div>*@


    @if (IsSectionDefined("Component"))
    {
        @RenderSection("Component", false)
    }

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.4/jquery.min.js"
            asp-fallback-src="~/lib/jquery/dist/jquery.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.9.2/umd/popper.min.js" integrity="sha512-2rNj2KJ+D8s1ceNasTIex6z4HWyOnEYLVC3FigGOmyQCZc2eBXKgOxQmo3oKLHyfcj53uz4QMsRCWNbLd32Q1g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.js"></script>

    @*<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>*@

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>